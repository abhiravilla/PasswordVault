<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".menu.Generate">
    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="400dp"
        android:layout_height="300dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="30dp"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="200dp"
        android:layout_alignParentTop="true"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/site"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="50dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:gravity="center"
                android:hint="Site Name"
                android:inputType="textPersonName"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="109dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:gravity="center"
                android:hint="Username"
                android:inputType="textPersonName"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="102dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:gravity="center"
                android:hint="Password Length"
                android:inputType="number"
                android:textSize="20dp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/exclusions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="30dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:gravity="center"
                android:hint="Exclusions"
                android:inputType="textPersonName"
                android:textSize="20dp"
                android:visibility="visible" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvgenerated"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="30dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/spassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="74dp"
                android:elevation="15dp"
                android:gravity="center"
                android:paddingTop="15dp"
                android:text="Password"
                android:textSize="18sp"
                android:visibility="visible"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/texclusions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="44dp"
                android:elevation="20dp"
                android:text="Exclusions"
                android:textAllCaps="true"
                android:textColor="#f90303"
                android:textIsSelectable="false"
                android:textSize="14sp"
                android:visibility="visible"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/texvalues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/texclusions"
                android:layout_marginEnd="99dp"
                android:elevation="20dp"
                android:text="Values"
                android:textAlignment="gravity"
                android:textColor="#f90303"
                android:textSize="14sp"
                android:textStyle="bold|italic"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tsitename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="42dp"
                android:text="Sitename"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ssitename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="96dp"
                android:text="Sitename"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tusername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="149dp"
                android:text="Username"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/susername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="177dp"
                android:text="Username"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="125dp"
                android:text="Password"
                android:textSize="24sp"
                android:textStyle="bold" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/gen"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="111dp"
        android:elevation="20dp"
        android:text="Generate"
        android:visibility="visible" />

    <Button
        android:id="@+id/regen"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="111dp"
        android:layout_alignTop="@+id/gen"
        android:elevation="20dp"
        android:text="Regenerate"
        android:visibility="gone" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="196dp"
        android:layout_marginStart="36dp"
        android:elevation="20dp"
        android:text="SAVE"
        android:visibility="gone" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/save"
        android:layout_marginEnd="36dp"
        android:text="Reset"
        android:elevation="20dp"
        android:visibility="gone"/>
</RelativeLayout>